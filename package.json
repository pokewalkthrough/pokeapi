{
  "name": "@pokewalkthrough/pokeapi",
  "version": "1.0.0",
  "description": "PokeAPI wrapper",
  "main": "index.js",
  "scripts": {
    "build": "npm run clean:compile && npm run lint && npm run compile",
    "clean:compile": "rm -rf dist/",
    "clean:test": "rm -rf .nyc_output/ && rm -rf coverage/",
    "compile": "tsc",
    "lint": "tslint -p . --fix",
    "test": "npm run clean:test && nyc mocha",
    "test:new": "npm run download-test-resources && npm run test",
    "download-test-resources": "ts-node util/update-local-resources.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/pokequest/pokeapi.git"
  },
  "keywords": [
    "PokeAPI",
    "Pokemon",
    "PokeQuest"
  ],
  "author": "Michael Randolph <mrand01@gmail.com> (https://github.com/mrand01)",
  "license": "MIT",
  "bugs": "https://github.com/pokequest/pokeapi/issues",
  "homepage": "https://github.com/pokequest/pokeapi#readme",
  "private": true,
  "dependencies": {
    "axios": "^0.18.0",
    "tslib": "^1.9.3"
  },
  "devDependencies": {
    "@types/chai": "^4.1.7",
    "@types/mocha": "^5.2.6",
    "@types/node": "^11.11.6",
    "chai": "^4.2.0",
    "husky": "^1.3.1",
    "lint-staged": "^13.1.0",
    "mocha": "^6.0.2",
    "nyc": "^13.3.0",
    "prettier": "^1.16.4",
    "source-map-support": "^0.5.11",
    "ts-node": "^8.0.3",
    "tslint": "^5.14.0",
    "tslint-config-prettier": "^1.18.0",
    "tslint-eslint-rules": "^5.4.0",
    "tslint-plugin-prettier": "^2.0.1",
    "typescript": "^3.3.4000"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && npm run compile"
    }
  },
  "lint-staged": {
    "*.ts": [
      "npm run lint",
      "git add"
    ]
  },
  "mocha": {
    "bail": true,
    "fullTrace": true,
    "require": [
      "ts-node/register",
      "source-map-support/register"
    ],
    "spec": "test/index.ts"
  },
  "prettier": {
    "endOfLine": "lf",
    "printWidth": 160,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "all"
  },
  "nyc": {
    "all": true,
    "cache": false,
    "extension": [
      ".ts"
    ],
    "include": [
      "src/**/*.ts"
    ],
    "reporter": [
      "html",
      "text-summary"
    ],
    "require": [
      "ts-node/register"
    ]
  }
}
